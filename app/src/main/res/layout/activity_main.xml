<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.khimi.igustipututresnanata_1202150025_studycase4.MainActivity">

    <Button
        android:id="@+id/buttonnListMahhasiswa"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="45sp"
        android:layout_marginRight="45sp"
        android:layout_marginTop="200sp"
        android:text="List Nama Mahasiswa"
        android:onClick="tampilNama"
        android:background="@color/colorPrimary"
        android:textSize="20dp" />

    <Button
        android:id="@+id/buttonnCariGambar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="45sp"
        android:layout_marginRight="45sp"
        android:layout_marginTop="5dp"
        android:text="Cari Gambar"
        android:onClick="tampilGambar"
        android:background="@color/colorPrimary"
        android:textSize="20dp" />

</LinearLayout>
